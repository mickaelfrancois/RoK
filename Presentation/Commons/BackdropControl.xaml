<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="Rok.Commons.BackdropControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Rok.Commons"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="img1Animation">
                <VisualState x:Name="img1Loaded">
                    <Storyboard>
                        <DoubleAnimation Duration="0:0:5" From="0" To="1" Storyboard.TargetProperty="Opacity" Storyboard.TargetName="img2"  />
                        <DoubleAnimation Duration="0:0:5" From="1" To="0" Storyboard.TargetProperty="Opacity" Storyboard.TargetName="img1"  />
                    </Storyboard>
                </VisualState>
                <VisualState x:Name="img2Loaded">
                    <Storyboard>
                        <DoubleAnimation Duration="0:0:5" From="0" To="1" Storyboard.TargetProperty="Opacity" Storyboard.TargetName="img1"  />
                        <DoubleAnimation Duration="0:0:5" From="1" To="0" Storyboard.TargetProperty="Opacity" Storyboard.TargetName="img2"  />
                    </Storyboard>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <Image x:Name="img1" Margin="0" HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="UniformToFill" />
        <Image x:Name="img2" Margin="0" HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="UniformToFill" />
    </Grid>
</UserControl>
