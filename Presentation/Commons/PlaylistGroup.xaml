<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="Rok.Commons.PlaylistGroup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Rok.Commons"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d"
    >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Top">
            <TextBlock x:Uid="playlistGroupGroupName" VerticalAlignment="Center" Margin="0,0,10,0" />
            <TextBox x:Name="groupName" Width="200"/>

            <TextBlock x:Uid="playlistGroupMaximumSongs" VerticalAlignment="Center" Margin="10,0,10,0" />
            <NumberBox x:Name="trackCount" Width="50" Margin="10,0,10,0"/>

            <TextBlock x:Uid="playlistGroupSortBy" VerticalAlignment="Center" Margin="10,0,10,0" />
            <ComboBox x:Name="cbGroupSortBy"/>

            <Button x:Name="groupRemove" Margin="20,0,10,0" Click="GroupRemove_Click">
                <SymbolIcon Symbol="Delete"/>
            </Button>
        </StackPanel>

        <ListBox Grid.Row="1" x:Name="listFilters" BorderThickness="1,0,0,0"/>

    </Grid>
</UserControl>
