<UserControl
    x:Class="Rok.Commons.RatingControlDarkControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Name="root"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="Red"
    mc:Ignorable="d">

    <UserControl.Resources>
        <SolidColorBrush x:Key="RatingControlSelectedForeground" Color="Gold"/>
        <SolidColorBrush x:Key="RatingControlUnselectedForeground" Color="White"/>
        <SolidColorBrush x:Key="RatingControlPointerOverPlaceholderForeground" Color="Gold"/>
    </UserControl.Resources>

    <RatingControl x:Name="InnerRating"
                       MaxRating="{x:Bind MaxRating, Mode=OneWay}"
                       IsClearEnabled="{x:Bind IsClearEnabled, Mode=OneWay}"
                       InitialSetValue="{x:Bind InitialValue, Mode=OneWay}"
                       Value="{x:Bind Value, Mode=TwoWay}"/>
</UserControl>