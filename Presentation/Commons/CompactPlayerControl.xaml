<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="Rok.Commons.CompactPlayerControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Rok.Commons"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Margin="0" Padding="0">

        <Image Source="{x:Bind PlayerViewModel.CurrentArtist.Picture, Mode=OneWay, TargetNullValue={Binding PlayerViewModel.MediaList.CurrentItem.Cover}}" Stretch="UniformToFill" Opacity="0.6"/>

        <CommandBar Background="Transparent" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,60"  OverflowButtonVisibility="Collapsed">
            <AppBarButton RequestedTheme="Dark" Style="{StaticResource AppBarButtonRevealStyle}" 
                       Icon="Previous" 
                       VerticalAlignment="Center" 
                       Command="{x:Bind PlayerViewModel.SkipPreviousCommand}" IsEnabled="{x:Bind PlayerViewModel.CanSkipPrevious, Mode=OneWay}" />

            <AppBarButton RequestedTheme="Dark" Style="{StaticResource AppBarButtonRevealStyle}" 
                       VerticalAlignment="Center" 
                       Command="{x:Bind PlayerViewModel.TogglePlayPauseCommand}">
                        <SymbolIcon Symbol="{x:Bind PlayerViewModel.PlaybackState, Mode=OneWay, Converter={StaticResource PlaybackStateToButtonIconConverter}}"></SymbolIcon>
            </AppBarButton>

            <AppBarButton RequestedTheme="Dark" Style="{StaticResource AppBarButtonRevealStyle}" 
                       Icon="Next" 
                       VerticalAlignment="Center" 
                       Command="{x:Bind PlayerViewModel.SkipNextCommand}" IsEnabled="{x:Bind PlayerViewModel.CanSkipNext, Mode=OneWay}" />
        </CommandBar>

        <!-- Bottom line -->
        <Grid Margin="0,0,0,10" VerticalAlignment="Bottom" Height="40">
            <Grid.Background>
                <SolidColorBrush Color="Black" Opacity="0.7"></SolidColorBrush>
            </Grid.Background>
        </Grid>

        <Grid x:Name="trackInfo">
            <TextBlock x:Name="title" Text="{x:Bind PlayerViewModel.CurrentTrack.Title, Mode=OneWay}" VerticalAlignment="Bottom" Margin="6,0,0,30" Foreground="#FF42CB0F" HorizontalAlignment="Center" TextWrapping="NoWrap" FontWeight="Bold" />
            <TextBlock x:Name="artist" Text="{x:Bind PlayerViewModel.CurrentTrack.ArtistName, Mode=OneWay}" VerticalAlignment="Bottom" Margin="6,0,0,10" Foreground="White" HorizontalAlignment="Center" TextWrapping="NoWrap" FontWeight="Bold" />
        </Grid>

        <Button x:Name="btCompactMode" Background="Transparent"
             HorizontalAlignment="Right" VerticalAlignment="Bottom" 
             RequestedTheme="Dark" 
             Command="{x:Bind PlayerViewModel.CompactModeCommand}" 
             Margin="0,0,4,10" Padding="0"
             FontFamily="Segoe MLD2 Asset"  FontSize="10" >
            <SymbolIcon Symbol="StopSlideShow"/>
        </Button>
    </Grid>
</UserControl>
