<?xml version="1.0" encoding="utf-8"?>
<Application x:Class="Rok.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:Rok"
             xmlns:converters="using:Rok.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <BitmapImage x:Key='artistPictureFallback'
                         UriSource='Assets/artistFallback.png' />
            <BitmapImage x:Key='albumCoverFallback'
                         UriSource='Assets/albumFallback.png' />

            <x:Double x:Key="headerBackgroundOpacity">0.9</x:Double>
            <x:Double x:Key="largeHeaderHeight">280</x:Double>
            <x:Double x:Key="normalHeaderHeight">180</x:Double>
            <x:Double x:Key="smallHeaderHeight">100</x:Double>
            <Thickness x:Key="scrollAwareThickness">0,0,17,0</Thickness>
            <Thickness x:Key="scrollHeaderThickness">0,0,130,0</Thickness>
            <Thickness x:Key="largeHeaderThickness">0,280,0,0</Thickness>
            <Thickness x:Key="normalHeaderThickness">0,130,0,0</Thickness>

            <x:Double x:Key="largeScreen">1230</x:Double>
            <x:Double x:Key="mediumScreen">640</x:Double>

            <x:String x:Key="HeartPath">M12,21 C12,21 4,13.36 4,8.5 C4,5.42 6.42,3 9.5,3 C11.24,3 12,4.1 12,4.1 C12,4.1 12.76,3 14.5,3 C17.58,3 20,5.42 20,8.5 C20,13.36 12,21 12,21 Z</x:String>

            <converters:BoolToGridLengthAutoConverter x:Key="BoolToGridLengthAutoConverter" />
            <converters:ColorToBrushConverter x:Key="ColorToBrushConverter" />
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
            <converters:BoolToInvertBoolConverter x:Key="BoolToInvertBoolConverter" />
            <converters:CountryCodeToImageSourceConverter x:Key="CountryCodeToImageSourceConverter" />
            <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
            <converters:StringToUriConverter x:Key="StringToUriConverter" />
            <converters:IntToVisibilityConverter x:Key="IntToVisibilityConverter" />
            <converters:IntToBoolConverter x:Key="IntToBoolConverter" />
            <converters:LongToTimespanConverter x:Key="LongToTimespanConverter" />
            <converters:DoubleToTimespanConverter x:Key="DoubleToTimespanConverter" />
            <converters:TimeSpanToDoubleConverter x:Key="TimeSpanToDoubleConverter" />
            <converters:BoolToInvertVisibilityConverter x:Key="BoolToInvertVisibilityConverter" />
            <converters:PlaybackStateToButtonIconConverter x:Key="PlaybackStateToButtonIconConverter" />
            <converters:VolumeToGlyphConverter x:Key="VolumeToGlyphConverter" />

            <converters:BoolToColorConverter x:Key="FavoriteToColorConverter">
                <converters:BoolToColorConverter.TrueBrush>
                    <SolidColorBrush Color="Gold" />
                </converters:BoolToColorConverter.TrueBrush>
                <converters:BoolToColorConverter.FalseBrush>
                    <SolidColorBrush Color="Gray" />
                </converters:BoolToColorConverter.FalseBrush>
            </converters:BoolToColorConverter>

            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <ResourceDictionary Source="ms-appx:///Styles/AlbumTemplates.xaml" />
                <ResourceDictionary Source="ms-appx:///Styles/NovaStyles.xaml" />
                <ResourceDictionary Source="ms-appx:///Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="ms-appx:///Styles/ControlsStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
