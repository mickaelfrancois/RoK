<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Rok.Pages.OptionsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Rok.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:enums="using:Rok.Shared.Enums"
    mc:Ignorable="d"
    x:Name="OptionsView">

    <Grid>
        <ScrollViewer Padding="16">
            <StackPanel Spacing="20">
                
                <StackPanel Spacing="8">
                    <TextBlock x:Uid="optionsAppearanceTitle"
                               FontSize="20"
                               FontWeight="SemiBold" />
                    <StackPanel Orientation="Horizontal"
                                Spacing="12"
                                VerticalAlignment="Center">
                        <TextBlock x:Uid="optionsThemeLabel"
                                   Width="180"
                                   VerticalAlignment="Center" />
                        <ComboBox Width="220"
                                  SelectedValuePath="Tag"
                                  SelectedValue="{x:Bind Options.Theme, Mode=TwoWay}">
                            <ComboBoxItem x:Uid="optionsThemeSystemItem"
                                          Tag="{x:Bind enums:AppTheme.System}" />
                            <ComboBoxItem x:Uid="optionsThemeLightItem"
                                          Tag="{x:Bind enums:AppTheme.Light}" />
                            <ComboBoxItem x:Uid="optionsThemeDarkItem"
                                          Tag="{x:Bind enums:AppTheme.Dark}" />
                        </ComboBox>
                    </StackPanel>
                </StackPanel>

                <Rectangle Height="1" Fill="{ThemeResource DividerStrokeColorDefaultBrush}"/>

                <!-- Library -->
                <StackPanel Spacing="12">
                    <TextBlock x:Uid="optionsLibraryTitle" FontSize="20" FontWeight="SemiBold"/>

                    <StackPanel Spacing="12">
                        <ToggleSwitch x:Uid="OptionsHideArtistsSwitch"
                                      IsOn="{x:Bind Options.HideArtistsWithoutAlbum, Mode=TwoWay}" />
                    </StackPanel>

                    <StackPanel Spacing="8">
                        <TextBlock x:Uid="LibraryFoldersLabel"/>
                        
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Button x:Uid="AddLibraryFolderButton" x:Name="AddLibraryFolderButton" Click="AddLibraryFolderButton_Click" />
                            <Button x:Uid="RemoveLibraryFolderButton" x:Name="RemoveLibraryFolderButton" Click="RemoveLibraryFolderButton_Click"
                                    IsEnabled="{Binding ElementName=LibraryPathsList, Path=SelectedItem, Converter={StaticResource BoolToInvertBoolConverter}, ConverterParameter=invert}" />
                        </StackPanel>

                        <ListView x:Name="LibraryPathsList"
                                  ItemsSource="{x:Bind Options.LibraryPath}"
                                  BorderBrush="{ThemeResource ListBoxBorderThemeBrush}"
                                  BorderThickness="1"
                                  SelectionMode="Single"
                                  Height="80"
                                  MinWidth="420">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="x:String">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon Glyph="&#xE8B7;" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                        <TextBlock Text="{x:Bind}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                        <TextBlock x:Uid="CachePathLabel" Width="180" VerticalAlignment="Center"/>
                        <TextBox Text="{x:Bind Options.CachePath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 MinWidth="360" />
                        <Button  x:Uid="BrowseCachePathButton" x:Name="BrowseCachePathButton" />
                    </StackPanel>
                </StackPanel>

                <Rectangle Height="1" Fill="{ThemeResource DividerStrokeColorDefaultBrush}"/>

                <!-- Import -->                
                <StackPanel Spacing="8">
                    <TextBlock x:Uid="OptionsImportTitle" FontSize="20" FontWeight="SemiBold"/>

                    <ToggleSwitch x:Uid="optionsRefreshAtStartupSwitch"
                                  IsOn="{x:Bind Options.RefreshLibraryAtStartup, Mode=TwoWay}" />

                    <ToggleSwitch
                        x:Uid="OptionsImportWithArtistGenreSwitch"
                        IsOn="{x:Bind Options.ImportTrackWithArtistGenre, Mode=TwoWay}" />
                </StackPanel>

                <Rectangle Height="1" Fill="{ThemeResource DividerStrokeColorDefaultBrush}"/>

                <StackPanel Spacing="8">
                    <TextBlock x:Uid="OptionsNovaApiTitle"
                               FontSize="20"
                               FontWeight="SemiBold" />

                    <ToggleSwitch x:Uid="OptionsNovaApiEnabledSwitch"
                                  IsOn="{x:Bind Options.NovaApiEnabled, Mode=TwoWay}" />

                    <ToggleSwitch x:Uid="OptionsTelemetryEnabledSwitch"
                                  IsOn="{x:Bind Options.TelemetryEnabled, Mode=TwoWay}" />

                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
