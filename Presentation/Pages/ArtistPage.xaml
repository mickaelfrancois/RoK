                            </Canvas>
                        </Viewbox>
                    </AppBarButton>

                    <AppBarButton x:Uid="artistViewFacebook"
                                  Style="{StaticResource headerBrandButton}"
                                  ToolTipService.ToolTip="Facebook"
                                  Command="{x:Bind ViewModel.OpenUrlCommand, Mode=OneWay}"
                                  CommandParameter="{x:Bind ViewModel.Artist.FacebookUrl, Mode=OneWay}"
