                                  Style="{StaticResource headerBrandButton}"
                                  ToolTipService.ToolTip="Tiktok"
                                  Command="{x:Bind ViewModel.OpenUrlCommand, Mode=OneWay}"
                                  CommandParameter="{x:Bind ViewModel.Artist.TiktokUrl, Mode=OneWay}"
                                  Visibility="{x:Bind ViewModel.Artist.TiktokUrl, Mode=OneWay, Converter={StaticResource StringToVisibilityConverter}}">
                        <Viewbox Width="20"
                                 Height="20"
                                 Stretch="Uniform">
                            <Canvas Width="24"
                                    Height="24">
