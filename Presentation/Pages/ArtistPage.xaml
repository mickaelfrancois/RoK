                            </Canvas>
                        </Viewbox>
                    </AppBarButton>

                    <AppBarButton x:Uid="artistViewThreads"
                                  Style="{StaticResource headerBrandButton}"
                                  ToolTipService.ToolTip="Threads"
                                  Command="{x:Bind ViewModel.OpenUrlCommand, Mode=OneWay}"
                                  CommandParameter="{x:Bind ViewModel.Artist.ThreadsUrl, Mode=OneWay}"
                                  Visibility="{x:Bind ViewModel.Artist.ThreadsUrl, Mode=OneWay, Converter={StaticResource StringToVisibilityConverter}}">
