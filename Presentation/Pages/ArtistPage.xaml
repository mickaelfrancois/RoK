                            </Canvas>
                        </Viewbox>
                    </AppBarButton>

                    <AppBarButton x:Uid="artistViewYoutube"
                                  Style="{StaticResource headerBrandButton}"
                                  ToolTipService.ToolTip="Youtube"
                                  Command="{x:Bind ViewModel.OpenUrlCommand, Mode=OneWay}"
                                  CommandParameter="{x:Bind ViewModel.Artist.YoutubeUrl, Mode=OneWay}"
                                  Visibility="{x:Bind ViewModel.Artist.YoutubeUrl, Mode=OneWay, Converter={StaticResource StringToVisibilityConverter}}">
                        <Viewbox Width="20"
                                 Height="20"
                                 Stretch="Uniform">
                            <Canvas Width="24"
                                    Height="24">
                                <Path Fill="#FF0000"
                                      Data="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z" />
