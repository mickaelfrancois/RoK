                            </Canvas>
                        </Viewbox>
                    </AppBarButton>

                    <AppBarButton x:Uid="artistViewInstagram"
                                  Style="{StaticResource headerBrandButton}"
                                  ToolTipService.ToolTip="Instagram"
                                  Command="{x:Bind ViewModel.OpenUrlCommand, Mode=OneWay}"
                                  CommandParameter="{x:Bind ViewModel.Artist.InstagramUrl, Mode=OneWay}"
                                  Visibility="{x:Bind ViewModel.Artist.InstagramUrl, Mode=OneWay, Converter={StaticResource StringToVisibilityConverter}}">
                        <Viewbox Width="20"
                                 Height="20"
                                 Stretch="Uniform">
