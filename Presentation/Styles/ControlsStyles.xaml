<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"    
    xmlns:common="using:Rok.Commons" 
    xmlns:tracks="using:Rok.Logic.ViewModels.Tracks">

    <!-- List pages -->

    <x:Double x:Key="headerListRowHeight">50</x:Double>
    <x:Double x:Key="gridListFirstRowHeight">30</x:Double>
    <x:Double x:Key="gridListSecondRowHeight">30</x:Double>

    <Style x:Key="headerListCommandBar" TargetType="CommandBar">
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="Padding" Value="4"/>
        <Setter Property="IsSticky" Value="True"/>
        <Setter Property="DefaultLabelPosition" Value="Right"/>
    </Style>

    <Style x:Key="gridList" TargetType="Grid">
        <Setter Property="BorderThickness" Value="0,1,0,0"/>
        <Setter Property="BorderBrush" Value="{ThemeResource AppBarBorderThemeBrush}"/>
    </Style>

    <Style x:Key="gridListFavoriteButton" TargetType="AnimatedIcon">
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="Margin" Value="-15,0,0,0"/>
    </Style>

    <!-- File page -->

    <x:Double x:Key="headerPictureColumnWidth">180</x:Double>
    <x:Double x:Key="headerRowHeight">180</x:Double>
    <x:Double x:Key="countryFlagHeigh">10</x:Double>

    <Style x:Name="headerBackdrop" TargetType="Image">
        <Setter Property="Opacity" Value="0.1"/>
        <Setter Property="Stretch" Value="UniformToFill"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style x:Name="headerPictureGrid" TargetType="Grid">
        <Setter Property="Margin" Value="6"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="CornerRadius" Value="10"/>
    </Style>

    <Style x:Name="headerPicture" TargetType="common:PictureControl">
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Icon" Value="&#xE8D4;"/>
    </Style>

    <Style x:Name="headerPictureSelectButton" TargetType="Button">
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="VerticalAlignment" Value="Bottom"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="6"/>
        <Setter Property="MinWidth" Value="0"/>
        <Setter Property="MinHeight" Value="0"/>
        <Setter Property="ContentTemplate">
            <Setter.Value>
                <DataTemplate>
                    <SymbolIcon Symbol="Edit" Foreground="Gray"/>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Name="headerTitleText" TargetType="TextBlock" BasedOn="{StaticResource TitleTextBlockStyle}">
        <Setter Property="Margin" Value="0"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <Style x:Name="headerGenreHyperlink" TargetType="HyperlinkButton">
        <Setter Property="Padding" Value="2"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="FontSize" Value="16"/>
    </Style>

    <Style x:Name="headerHyperlink" TargetType="HyperlinkButton">
        <Setter Property="Padding" Value="2"/>
        <Setter Property="CornerRadius" Value="4"/>
    </Style>
    
    <Style x:Name="headerText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12"/>
    </Style>

    <Style x:Name="headerCommandBar" TargetType="CommandBar">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="DefaultLabelPosition" Value="Right"/>
        <Setter Property="Margin" Value="-5,0,0,0" />
        <Setter Property="Padding" Value="0" />
    </Style>



    <!-- Tracks list -->
    <x:Double x:Key="gridHeaderTracksTitleColumnWidth">350</x:Double>
    <x:Double x:Key="gridHeaderTracksAlbumColumnWidth">250</x:Double>
    <x:Double x:Key="gridHeaderTracksArtistColumnWidth">350</x:Double>
    <x:Double x:Key="gridHeaderTracksGenreColumnWidth">250</x:Double>
    <x:Double x:Key="gridHeaderTracksScoreColumnWidth">150</x:Double>

    <x:Double x:Key="gridHeaderTracksHeight">25</x:Double>

    <Style x:Key="gridTracks" TargetType="Grid">
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
        <Setter Property="BorderBrush" Value="{StaticResource DefaultThemeBrush}"/>
    </Style>

    <Style x:Key="gridHeaderTracksText" TargetType="TextBlock">
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Margin" Value="20,0,0,0" />
    </Style>

    <Style x:Key="gridTracksRowIndexText" TargetType="TextBlock">
        <Setter Property="HorizontalTextAlignment" Value="Right"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Width" Value="15"/>
        <Setter Property="Margin" Value="0,0,6,0"/>
        <Setter Property="Foreground" Value="{ThemeResource SystemColorDisabledTextColor}"/>
    </Style>

    <Style x:Key="gridTracksTitleText" TargetType="HyperlinkButton">
        <Setter Property="Padding" Value="0"/>
        <Setter Property="MaxWidth" Value="280"/>
        <Setter Property="ContentTemplate">
            <Setter.Value>
                <DataTemplate>
                    <TextBlock Text="{Binding Title}"
                               TextTrimming="CharacterEllipsis"
                               ToolTipService.ToolTip="{Binding Title}"/>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="gridTracksLyricsText" TargetType="HyperlinkButton">
        <Setter Property="Margin" Value="6,0,0,0"/>
        <Setter Property="Foreground" Value="Gray"/>
        <Setter Property="FontSize" Value="9"/>
        <Setter Property="Padding" Value="0"/>
    </Style>

    <Style x:Key="gridTracksAlbumText" TargetType="HyperlinkButton">
        <Setter Property="Padding" Value="0"/>
        <Setter Property="ContentTemplate">
            <Setter.Value>
                <DataTemplate>
                    <TextBlock Text="{Binding Track.AlbumName}"
                        TextTrimming="CharacterEllipsis"
                        ToolTipService.ToolTip="{Binding Track.AlbumName}"/>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="gridTracksGenreText"
           TargetType="HyperlinkButton">
        <Setter Property="Padding"
                Value="0" />
        <Setter Property="ContentTemplate">
            <Setter.Value>
                <DataTemplate>
                    <TextBlock Text="{Binding Track.GenreName}"
                               TextTrimming="CharacterEllipsis"
                               ToolTipService.ToolTip="{Binding Track.GenreName}" />
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="gridTracksArtistText" TargetType="HyperlinkButton">
        <Setter Property="Padding" Value="0"/>
        <Setter Property="ContentTemplate">
            <Setter.Value>
                <DataTemplate>
                    <TextBlock Text="{Binding Track.ArtistName}"
                        TextTrimming="CharacterEllipsis"
                        ToolTipService.ToolTip="{Binding Track.ArtistName}"/>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Name="tracksListViewItem" TargetType="ListViewItem">
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Padding" Value="10,0,12,0"/>
        <Setter Property="MinHeight" Value="30"/>
    </Style>

    <Style x:Key="gridAlbumsWrapGrid" TargetType="ItemsWrapGrid">
        <Setter Property="Orientation" Value="Horizontal"/>
        <Setter Property="ItemHeight" Value="310"/>
        <Setter Property="ItemWidth" Value="310"/>
        <Setter Property="Margin" Value="0,0,2,2"/>
    </Style>

</ResourceDictionary>
