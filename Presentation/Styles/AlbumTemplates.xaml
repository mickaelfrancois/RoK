<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary    
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:common="using:Rok.Commons">

    <DataTemplate x:Key="AlbumsGrid">
        <Grid HorizontalAlignment="Left" Width="300" Height="300" Margin="4" BorderBrush="Gray" BorderThickness="0">
            <Border>
                <common:PictureControl Padding="0" Margin="0" Cover="{Binding Picture, Mode=OneWay}" VerticalAlignment="Center" HorizontalAlignment="Center" Icon="&#xE8D4;" PlayButtonVisibility="Visible" Command="{Binding ListenCommand}"/>
            </Border>

            <Grid VerticalAlignment="Bottom" Background="#CC000000" Height="60" Margin="2,0,2,2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"></RowDefinition>
                    <RowDefinition Height="30"></RowDefinition>
                </Grid.RowDefinitions>

                <HyperlinkButton Margin="4,0,0,0" FontSize="18" Width="300" Content="{Binding Name}"  Style="{StaticResource HyperlinkSmallButtonStyle}" Foreground="LightGreen"  HorizontalAlignment="Left" HorizontalContentAlignment="Left" Command="{Binding AlbumOpenCommand}"/>
                <SymbolIcon HorizontalAlignment="Right" Symbol="Favorite" Foreground="Yellow" Visibility="{Binding IsFavorite}"></SymbolIcon>

                <HyperlinkButton Grid.Row="1" Margin="4,0,0,0" FontSize="18" Width="300" Content="{Binding ArtistName}" Command="{Binding ArtistOpenCommand}"  Style="{StaticResource HyperlinkSmallButtonStyle}" Foreground="White" HorizontalAlignment="Left" HorizontalContentAlignment="Left" />
                <SymbolIcon Grid.Row="1" HorizontalAlignment="Right" Symbol="Favorite" Foreground="Yellow" Visibility="{Binding IsArtistFavorite}"></SymbolIcon>
            </Grid>
        </Grid>
    </DataTemplate>

    <DataTemplate x:Key="AlbumsGroupCategory">
        <StackPanel Orientation="Horizontal" Visibility="Visible">
            <HyperlinkButton Content="{Binding Title}" Style="{StaticResource HyperlinkGroupButtonStyle}"></HyperlinkButton>
            <Button Style="{StaticResource ButtonTextBlockStyle}" Margin="10,0,0,0" Command="{Binding ElementName=albumsView, Path=DataContext.AlbumsListenGroupCommand}" CommandParameter="{Binding}" VerticalAlignment="Bottom" Tapped="GroupButton_Tapped" >
                <StackPanel Orientation="Horizontal" >
                    <TextBlock Text="&#xE14B;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Margin="0,0,4,0"></TextBlock>
                    <TextBlock x:Uid="albumsViewListenListGroup" FontFamily="Segoe UI" VerticalAlignment="Center"></TextBlock>
                </StackPanel>
            </Button>
        </StackPanel>
    </DataTemplate>

    <DataTemplate x:Key="AlbumsZoomoutGrid">
        <TextBlock HorizontalAlignment="Center" Width="200" Text="{Binding Group.Title}"/>
    </DataTemplate>

    <DataTemplate x:Key="AlbumsListenPanel">
        <StackPanel Orientation="Horizontal" x:Name="listen" Margin="0,0,10,0">
            <Button  Style="{StaticResource ButtonTextBlockStyle}" Command="{Binding AlbumsListenCommand}" VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal">
                    <SymbolIcon Symbol="Shuffle"></SymbolIcon>
                    <TextBlock x:Uid="albumsViewListen" Text=" Ã©couter" FontFamily="Segoe UI" Margin="2,0,0,0" VerticalAlignment="Center"></TextBlock>
                </StackPanel>
            </Button>
            <TextBlock Text=" (" Style="{StaticResource BodyTextBlockStyle}" VerticalAlignment="Center"><Run Text="{Binding AlbumsCount, Mode=OneWay}"></Run><Run Text=")"></Run></TextBlock>
        </StackPanel>
    </DataTemplate>

    <DataTemplate x:Key="AlbumsSortByPanel">
        <StackPanel Orientation="Horizontal" Margin="0,0,10,0" VerticalAlignment="Center">
            <TextBlock Text="&#xE8CB;" FontFamily="Segoe MDL2 Assets" Style="{StaticResource BodyTextBlockStyle}" VerticalAlignment="Center"></TextBlock>
            <TextBlock x:Uid="albumsViewSortBy" Text="Trier par" Style="{StaticResource BodyTextBlockStyle}"></TextBlock>
            <Button Style="{StaticResource ButtonTextBlockStyle}" Margin="5,0,0,0" VerticalContentAlignment="Center">
                <Button.Flyout>
                    <MenuFlyout>
                        <MenuFlyoutItem x:Uid="albumsViewSortByYearMenu"        Command="{Binding AlbumsSortByCommand}" CommandParameter="YEAR"></MenuFlyoutItem>
                        <MenuFlyoutItem x:Uid="albumsViewSortByCreatDateMenu"   Command="{Binding AlbumsSortByCommand}" CommandParameter="CREATDATE"></MenuFlyoutItem>
                        <MenuFlyoutItem x:Uid="albumsViewSortByAlbumMenu"       Command="{Binding AlbumsSortByCommand}" CommandParameter="ALBUMNAME"></MenuFlyoutItem>
                        <MenuFlyoutItem x:Uid="albumsViewSortByArtistMenu"      Command="{Binding AlbumsSortByCommand}" CommandParameter="ARTISTNAME"></MenuFlyoutItem>
                        <MenuFlyoutItem x:Uid="albumsViewSortByLastListenMenu"  Command="{Binding AlbumsSortByCommand}" CommandParameter="LASTLISTEN"></MenuFlyoutItem>
                        <MenuFlyoutItem x:Uid="albumsViewSortByListenCountMenu" Command="{Binding AlbumsSortByCommand}" CommandParameter="LISTENCOUNT"></MenuFlyoutItem>
                    </MenuFlyout>
                </Button.Flyout>
                <TextBlock Text="{Binding AlbumsSortByText, Mode=OneWay}" Style="{StaticResource BodyTextBlockStyle}"></TextBlock>
            </Button>
        </StackPanel>
    </DataTemplate>

    <DataTemplate x:Key="AlbumsFilterByPanel">
        <StackPanel Orientation="Horizontal" Margin="0,0,10,0">
            <TextBlock Text="&#xE71C;" FontFamily="Segoe MDL2 Assets" Style="{StaticResource BodyTextBlockStyle}" VerticalAlignment="Center"></TextBlock>
            <TextBlock x:Uid="albumsViewFilterBy" Style="{StaticResource BodyTextBlockStyle}" VerticalAlignment="Center"></TextBlock>
            <Button x:Name="buttonFilter" Style="{StaticResource ButtonTextBlockStyle}" Margin="5,0,0,0" VerticalContentAlignment="Center">
                <Button.Flyout>
                    <Flyout x:Name="filterFlyout">
                        <StackPanel Orientation="Vertical">
                            <TextBox x:Uid="albumsViewSearchBox" x:Name="SearchBox" Text="{Binding AlbumsFilterArtist, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                            <MenuFlyoutItem x:Uid="albumsViewFilterByAllMenu"             Command="{Binding AlbumsFilterByCommand}" CommandParameter="ALL"></MenuFlyoutItem>
                            <MenuFlyoutItem x:Uid="albumsViewFilterByFavoriteAlbumMenu"   Command="{Binding AlbumsFilterByCommand}" CommandParameter="ALBUMFAVORITE"></MenuFlyoutItem>
                            <MenuFlyoutItem x:Uid="albumsViewFilterByFavoriteArtistMenu"  Command="{Binding AlbumsFilterByCommand}" CommandParameter="ARTISTFAVORITE"></MenuFlyoutItem>
                            <MenuFlyoutItem x:Uid="albumsViewFilterByFavoriteGenreMenu"   Command="{Binding AlbumsFilterByCommand}" CommandParameter="GENREFAVORITE"></MenuFlyoutItem>
                        </StackPanel>
                    </Flyout>
                </Button.Flyout>
                <TextBlock Text="{Binding AlbumsFilterBy, Mode=OneWay}" Style="{StaticResource BodyTextBlockStyle}"></TextBlock>
            </Button>
        </StackPanel>
    </DataTemplate>

    <DataTemplate x:Key="AlbumsStylePanel">
        <StackPanel Orientation="Horizontal" Margin="0,0,10,0">
            <TextBlock x:Uid="styleList" Text="Style" Margin="0,0,10,0" Style="{StaticResource BodyTextBlockStyle}"></TextBlock>
            <ToggleButton x:Name="gridStyle" Style="{StaticResource TextBlockButtonStyle}" Command="{Binding AlbumsDisplayTypeCommand}" CommandParameter="LIST" IsChecked="{Binding IsAlbumsDisplayAsGrid, Mode=OneWay}" Visibility="{Binding IsAlbumsDisplayAsGrid, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" Padding="0" VerticalAlignment="Top">
                <SymbolIcon Symbol="ViewAll"/>
            </ToggleButton>
            <ToggleButton x:Name="listStyle" Style="{StaticResource TextBlockButtonStyle}" Command="{Binding AlbumsDisplayTypeCommand}" CommandParameter="GRID" IsChecked="{Binding IsAlbumsDisplayAsList, Mode=OneWay}" Visibility="{Binding IsAlbumsDisplayAsList, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" Padding="0" VerticalAlignment="Top">
                <SymbolIcon Symbol="List"></SymbolIcon>
            </ToggleButton>
        </StackPanel>
    </DataTemplate>


    <DataTemplate x:Key="AlbumsList">
        <Grid HorizontalAlignment="Stretch" Margin="0,0,20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="albumName"></ColumnDefinition>
                <ColumnDefinition x:Name="artistName"></ColumnDefinition>
                <ColumnDefinition x:Name="genreName"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <Button Style="{StaticResource ButtonTextBlockStyle}" Background="Transparent" Content="{Binding Name}" HorizontalAlignment="Stretch"  VerticalAlignment="Center" HorizontalContentAlignment="Left" Command="{Binding AlbumOpenCommand}" />
                <TextBlock Margin="4,0,0,0" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="12" FontFamily="Segoe MDL2 Assets" Text="&#xE113;" Foreground="Yellow" Visibility="{Binding IsFavorite}"></TextBlock>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Style="{StaticResource ButtonTextBlockStyle}" Background="Transparent" Content="{Binding ArtistName}" HorizontalAlignment="Stretch"  VerticalAlignment="Center" HorizontalContentAlignment="Left" Command="{Binding ArtistOpenCommand}" />
                <TextBlock Margin="4,0,0,0" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="12" FontFamily="Segoe MDL2 Assets" Text="&#xE113;" Foreground="Yellow" Visibility="{Binding IsArtistFavorite}"></TextBlock>
            </StackPanel>

            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <Button Style="{StaticResource ButtonTextBlockStyle}" Background="Transparent" Content="{Binding GenreName}" HorizontalAlignment="Stretch"  VerticalAlignment="Center" HorizontalContentAlignment="Left" Command="{Binding GenreOpenCommand}" />
                <TextBlock Margin="4,0,0,0" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="12" FontFamily="Segoe MDL2 Assets" Text="&#xE113;" Foreground="Yellow" Visibility="{Binding IsGenreFavorite}"></TextBlock>
            </StackPanel>
        </Grid>
    </DataTemplate>

</ResourceDictionary>
